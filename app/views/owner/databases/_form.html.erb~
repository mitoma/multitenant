<%= form_for(@owner_database) do |f| %>
  <% if @owner_database.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@owner_database.errors.count, "error") %> prohibited this owner_database from being saved:</h2>

      <ul>
      <% @owner_database.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :host %><br />
    <%= f.text_field :host %>
  </div>
  <div class="field">
    <%= f.label :port %><br />
    <%= f.text_field :port %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
